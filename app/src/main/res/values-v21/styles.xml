<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/coolGrey</item>
        <item name="colorControlNormal">@color/coolGrey</item>
        <item name="colorControlActivated">@color/coolGrey</item>
        <item name="colorControlHighlight">@color/coolGrey</item>
        <item name="navigationIcon">?homeAsUpIndicator</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:navigationBarColor">@color/red_text</item>

    </style>
    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/grey_ash</item>
        <item name="colorControlActivated">@color/green_new</item>
        <item name="colorControlHighlight">@color/green_new</item>
    </style>


    <style name="AppTheme.Custom" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/green_new</item> <!-- Whatever color you want-->
    </style>

    <style name="GreenButton" parent="AppTheme">
        <item name="android:layout_height">@dimen/x_64</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/custom_arabic_button</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="GreenButtonNew" parent="AppTheme">
        <item name="android:background">@drawable/selector_green_gray</item>
        <item name="android:layout_height">@dimen/x_56</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/custom_arabic_button</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    
    <style name="AppThemeSplash" parent="AppTheme">
        <item name="colorPrimary">@color/green_new</item>
        <item name="colorAccent">@color/green_new</item>
        <item name="android:statusBarColor">@android:color/holo_green_dark</item>
        <item name="android:navigationBarColor">@android:color/black</item>

    </style>
